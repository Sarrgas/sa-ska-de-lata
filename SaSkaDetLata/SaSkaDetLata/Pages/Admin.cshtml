@page
<div class="container">
    <div class="row">&nbsp;</div>
    <h4>Öppna sifferluckor</h4>
    <div class="panelcontrols col-4">
        <div class="row panelcontrolsrow">
            <input type="button" class="btn btn-primary adminbtn control" data="1" id="control1" value="Öppna lucka 1" />
        </div>
        <div class="row panelcontrolsrow">
            <input type="button" class="btn btn-primary adminbtn control" data="2" id="control2" value="Öppna lucka 2" />
        </div>
        <div class="row panelcontrolsrow">
            <input type="button" class="btn btn-primary adminbtn control" data="3" id="control3" value="Öppna lucka 3" />
        </div>
        <div class="row panelcontrolsrow">
            <input type="button" class="btn btn-primary adminbtn control" data="4" id="control4" value="Öppna lucka 4" />
        </div>
        <div class="row panelcontrolsrow">
            <input type="button" class="btn btn-primary adminbtn control" data="5" id="control5" value="Öppna lucka 5" />
        </div>
        <div class="row panelcontrolsrow">
            <input type="button" class="btn btn-primary adminbtn control" data="6" id="control6" value="Öppna lucka 6" />
        </div>
    </div>
    <br />
    <h4>Spelkontroller</h4>
    <div class="panelcontrols col-4">
        <div class="row panelcontrolsrow">
            <input type="button" class="btn btn-primary adminbtn" id="next" value="Nästa låt" />
        </div>
        <div class="row panelcontrolsrow">
            <input type="button" class="btn btn-primary adminbtn" id="reset" value="Uppdatera och återställ" />
        </div>
        <div class="row" style="display: inline-block">
            <input type="button" class="btn btn-primary adminbtn" id="givescoreteam1" value="Team 1 +1" />
            <input type="button"  class="btn btn-primary adminbtn" id="givescoreteam2" value="Team 2 +1" />
        </div>
    </div>
    <br />
    <div>
        <p>
            <button class="btn btn-info" type="button" data-toggle="collapse" data-target="#songinfo">
                Visa facit
            </button>
        </p>
        <div class="collapse" id="songinfo">
            <div class="card card-body">
                <div class="row">
                    <p>Artist: <span id="artistname"></span></p>
                </div>
                <div class="row">
                    <p>Låt: <span id="songname"></span></p>
                </div>
                <div class="row">
                    <p>Text: <span id="lyrics"></span></p>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/admin.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>